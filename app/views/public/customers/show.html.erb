<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="fw-bold mb-4">マイページ</h2>
      
      <!-- 登録情報 -->
      <div class="d-flex align-items-center mb-3">
        <h4 class="mb-0 me-3">登録情報</h4>
        <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %>
      </div>
      
      <table class="table table-bordered mb-5">
        <tbody>
          <tr>
            <th class="col-md-3">氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      
      <!-- 配送先 -->
      <div class="d-flex align-items-center mb-4">
        <h4 class="mb-0 me-3">配送先　</h4>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>
      
      <!-- 注文履歴 -->
      <div class="d-flex align-items-center mb-4">
        <h4 class="mb-0 me-3">注文履歴</h4>
        <%= link_to "注文履歴一覧", orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
