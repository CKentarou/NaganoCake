<div class="container mt-4">
  <div class="row">
    <!-- ジャンル一覧 -->
    <div class="col-md-2">
      <div class="list-group list-group-flush">
        <div class="list-group-item bg-light text-center">
          <h4 class="mb-0 fw-bold">ジャンル検索</h4>
        </div>
        <% if @genres.present? %>
          <% @genres.each do |genre| %>
            <li class="list-group-item text-center"><%= genre.name %></li>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- 商品一覧 -->
    <div class="col-md-10">
      <h2 class="fw-bold mb-4">商品一覧</h2>
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @items.each do |item| %>
          <% if item.sales_status == "販売中" %>
            <div class="col">
              <div class="card h-100">
                  <%= link_to item_path(item), class: "text-dark text-decoration-none" do %>
                    <%= image_tag item.get_image(size: "800x800"), class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
                    <div class="card-body">
                      <h5 class="card-title"><%= item.name %></h5>
                      <p class="card-text">¥<%= item.price_excluding_tax.to_s(:delimited) %></p>
                    </div>
                  <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
