<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-auto">
      <h2 class="fw-bold">
        <i class="fas fa-users me-2"></i>会員一覧
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer), class: "text-dark" do %>
                  <%= customer.last_name %> <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.membership_status %>
                  <span class="text-success">有効</span>
                <% else %>
                  <span class="text-secondary">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
