<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-auto">
      <h2 class="fw-bold">
        <i class="fas fa-user-edit me-2"></i><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集
      </h2>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <div class="row mb-4">
      <div class="col">
        <table class="table">
          <tbody>
            <tr>
              <th style="width: 25%">会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td class="d-flex gap-3">
                <%= f.text_field :last_name, class: "form-control w-auto" %>
                <%= f.text_field :first_name, class: "form-control w-auto" %>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td class="d-flex gap-3">
                <%= f.text_field :last_name_kana, class: "form-control w-auto" %>
                <%= f.text_field :first_name_kana, class: "form-control w-auto" %>
              </td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class: "form-control w-auto" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :phone_number, class: "form-control w-auto" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, class: "form-control w-auto" %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :membership_status, true, class: "form-check-input" %>
                  <%= f.label :membership_status_true, "有効", class: "form-check-label" %>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :membership_status, false, class: "form-check-input" %>
                  <%= f.label :membership_status_false, "退会", class: "form-check-label" %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col d-flex justify-content-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
