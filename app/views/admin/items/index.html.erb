<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-auto">
      <h2 class="fw-bold">
        <i class="fas fa-list me-2"></i>商品一覧
      </h2>
    </div>
    <div class="col-auto ms-auto">
      <%= link_to new_admin_item_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus"></i> 新規商品登録
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item), class: "text-dark" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>¥<%= number_with_delimiter(item.price_excluding_tax) %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.sales_status == "販売中" %>
                  <span class="text-success">販売中</span>
                <% else %>
                  <span class="text-secondary">販売停止中</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="mt-5 d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>