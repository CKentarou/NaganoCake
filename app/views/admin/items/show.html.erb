<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-auto">
      <h2 class="fw-bold">
        <i class="fas fa-list me-2"></i>商品詳細
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image(size: "800x800"), class: "img-fluid" %>
    </div>
    
    <div class="col-md-8">
      <table class="table table-borderless">
        <tr>
          <th style="width: 30%">商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td>
            <%= number_to_currency(@item.price_excluding_tax * 1.1, unit: "¥", strip_insignificant_zeros: true) %>
            (<%= number_to_currency(@item.price_excluding_tax, unit: "¥", strip_insignificant_zeros: true) %>)
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.sales_status %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-secondary">販売停止中</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-2">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-block" %>
    </div>
  </div>
</div>
