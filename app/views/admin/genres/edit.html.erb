<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-auto">
      <h2 class="fw-bold">
        <i class="fas fa-list me-2"></i>ジャンル一覧
      </h2>
    </div>
  </div>
  <div class="row mb-4">
    <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, class: "d-flex align-items-center gap-3" do |f| %>
      <div class="col-auto">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-3" style="min-width: 200px;">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>